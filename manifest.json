{
  "manifest_version": 3,
  "name": "Annotation Extension",
  "version": "1.0",
  "description": "A Chrome extension that allows displaying and adding/import/exporting annotations on top of the current web page.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Annotation Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
